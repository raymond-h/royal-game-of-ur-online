{
  "scripts": {
    "http-server": "http-server -p $PORT ./static/",
    "heroku-postbuild": "npm run build",
    "build": "run-p build:*",
    "build:ts": "tsc",
    "build:web": "browserify -p [ tsify ] src/web/index.ts -o static/index.js",
    "watch": "run-p watch:*",
    "watch:ts": "tsc -w",
    "watch:web": "watchify -p [ tsify ] -e src/web/index.ts -o static/index.js"
  },
  "engines": {
    "node": ">=7.6.0 <8.0.0"
  },
  "dependencies": {
    "deepstream.io-client-js": "^2.1.5",
    "http-server": "^0.10.0",
    "ramda": "^0.23.0"
  },
  "devDependencies": {
    "@types/node": "^7.0.18",
    "@types/ramda": "0.0.8",
    "browserify": "^14.3.0",
    "npm-run-all": "^4.0.2",
    "tsify": "^3.0.1",
    "typescript": "^2.3.2",
    "watchify": "^3.9.0"
  }
}
